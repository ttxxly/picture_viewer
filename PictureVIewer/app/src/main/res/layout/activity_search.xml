<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3D54"
    tools:context="top.ttxxly.com.pictureviewer.Activity.SearchActivity"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="#26324b"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <ImageView
            android:id="@+id/img_search_return_top"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/return_top" />


        <EditText
            android:id="@+id/et_search_input"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="关键词搜索"
            android:textColor="#CACDD0"
            android:theme="@style/MyEditText" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#26324b"
            android:text="搜索"
            android:textColor="#CACDD0"
            android:textSize="18sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/gv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"/>

</LinearLayout>
