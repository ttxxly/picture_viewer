<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3D54"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#26324b"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_details_return_top"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/return_top" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详细图片信息"
            android:textColor="#CACDD0"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_details_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/edit" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_details_pic"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_details_photos_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="SEE YOU AT"
        android:textColor="#CACDD0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_details_photos_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="6.01 10:00 - 10:00"
        android:textColor="#CACDD0"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_details_photos_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textColor="#CACDD0"
        android:textSize="20sp" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#CACDD0"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
